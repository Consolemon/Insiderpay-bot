import telebot
from telebot import types

API_TOKEN = '7785877632:AAGRkkZwaRfTnbwawvQ8KyWtyXo2smVfezQ'

ADMIN_USERNAME = '@Nicellls'
USDT_ADDRESS = 'TFNMna9XLz3BfhK9DAZh9bc5dHVtbbtxGR'

bot = telebot.TeleBot(API_TOKEN)

@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    markup.add("üì¶ –°–¥–µ–ª–∞—Ç—å –∑–∞–∫–∞–∑", "üí∏ –û–ø–ª–∞—Ç–∏—Ç—å", "üõ† –°–≤—è–∑–∞—Ç—å—Å—è")
    bot.send_message(message.chat.id, "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å!\n–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ:", reply_markup=markup)

@bot.message_handler(func=lambda m: m.text == "üì¶ –°–¥–µ–ª–∞—Ç—å –∑–∞–∫–∞–∑")
def order_start(message):
    msg = bot.send_message(message.chat.id, "–û–ø–∏—à–∏—Ç–µ, —á—Ç–æ –≤—ã —Ö–æ—Ç–∏—Ç–µ –∑–∞–∫–∞–∑–∞—Ç—å:")
    bot.register_next_step_handler(msg, process_order)

def process_order(message):
    text = f"üì¶ –ù–æ–≤—ã–π –∑–∞–∫–∞–∑ –æ—Ç @{message.from_user.username or '–Ω–µ–∏–∑–≤–µ—Å—Ç–Ω–æ'}:\n\nüìù {message.text}"
    bot.send_message(message.chat.id, "‚úÖ –ó–∞–∫–∞–∑ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω.")
    bot.send_message(ADMIN_USERNAME, text)

@bot.message_handler(func=lambda m: m.text == "üí∏ –û–ø–ª–∞—Ç–∏—Ç—å")
def pay(message):
    bot.send_message(message.chat.id,
        f"üí∏ –û–ø–ª–∞—Ç–∏—Ç–µ –Ω–∞ USDT (TRC20):\n`{USDT_ADDRESS}`\n\n–ü–æ—Å–ª–µ –æ–ø–ª–∞—Ç—ã –ø—Ä–∏—à–ª–∏—Ç–µ —Å–∫—Ä–∏–Ω—à–æ—Ç.",
        parse_mode='Markdown')

@bot.message_handler(content_types=['photo'])
def handle_photo(message):
    caption = f"üí∏ –û–ø–ª–∞—Ç–∞ –æ—Ç @{message.from_user.username or '–Ω–µ–∏–∑–≤–µ—Å—Ç–Ω–æ'}"
    bot.send_photo(ADMIN_USERNAME, message.photo[-1].file_id, caption=caption)
    bot.send_message(message.chat.id, "‚úÖ –°–∫—Ä–∏–Ω—à–æ—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω. –ú—ã —Å–∫–æ—Ä–æ —Å–≤—è–∂–µ–º—Å—è —Å –≤–∞–º–∏.")

@bot.message_handler(func=lambda m: m.text == "üõ† –°–≤—è–∑–∞—Ç—å—Å—è")
def contact(message):
    bot.send_message(message.chat.id, f"–ü–æ –≤—Å–µ–º –≤–æ–ø—Ä–æ—Å–∞–º: {ADMIN_USERNAME}")

